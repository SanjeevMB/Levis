<style>
  .container {
    position: relative;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
  }
  .overlay {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
    z-index: 99;
  }
  .popup-section {
    position: fixed;
    top: 20%;
    left: 15%;
    width: 70%;
    height: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
    background: url('{{ settings.popup_image | image_url }}');
    background-size: cover;
    border-radius: 5px;
  }

  .popup-container {
    position: relative;
    max-width: 600px;
    width: 100%;
    padding: 20px;
    border-radius: 10px;
    overflow: hidden;
    margin-left: 46%;
    /* margin-top: -5%; */
    text-align: center;
  }

  .close-button {
    position: absolute;
    top: 5px;
    right: 5px;
    font-size: 15px;
    cursor: pointer;
    background: none;
    border: none;
    color: black;
  }

  input {
    padding: 10px;
    margin-bottom: 10px;
    border: none;
    border-radius: 1rem;
  }

  button {
    padding: 10px;
    font-size: 1.5rem;
    font-weight: bold;
    border: none;
    cursor: pointer;
    background-color: #FFFFFF;
    color: black;
    border-radius: 1rem;
  }
</style>

<section class="container">
  <div class="popup-section">
    <button class="close-button">X</button>
    <div class="popup-container">
      <h2>Check below if we deliver to your area</h2>
      {% render 'pin-code-checker' %}
    </div>
  </div>
  <div class="overlay"></div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const closeButton = document.querySelector('.close-button');
    const close = document.querySelector('.overlay');
    const container = document.querySelector('.container');

    if (localStorage.pincode) {
      container.style.display = 'none';
    }

    closeButton.addEventListener('click', function () {
      container.style.display = 'none';
    });
    close.addEventListener('click', function () {
      container.style.display = 'none';
    });
  });
</script>
